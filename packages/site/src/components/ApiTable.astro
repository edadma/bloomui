---
export interface ApiProperty {
  property: string;
  description: string;
  type: string;
  default?: string;
}

interface Props {
  title?: string;
  data: ApiProperty[];
}

const { title, data } = Astro.props;
---

<div>
  {title && (
    <h3 class="text-xl font-bold font-mono mb-4">{title}</h3>
  )}
  <div class="overflow-x-auto border border-base-content/10 rounded-lg">
    <table class="table">
      <thead>
        <tr>
          <th>Property</th>
          <th>Description</th>
          <th>Type</th>
          <th>Default</th>
        </tr>
      </thead>
      <tbody>
        {data.map((prop) => (
          <tr>
            <td>
              <code class="text-sm bg-base-200 px-2 py-1 rounded">
                {prop.property}
              </code>
            </td>
            <td>{prop.description}</td>
            <td>
              <code class="text-sm text-primary">{prop.type}</code>
            </td>
            <td>
              {prop.default ? (
                <code class="text-sm">{prop.default}</code>
              ) : (
                <span class="text-base-content/50">-</span>
              )}
            </td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>
</div>
