---
import Layout from '../../layouts/Layout.astro';
import ApiTable from '../../components/ApiTable.astro';
import { Code } from 'astro:components';

const segmentedApi = [
  { property: 'options', description: 'Options to display', type: "(string | number | SegmentedOption)[]", default: '-' },
  { property: 'value', description: 'Currently selected value (controlled)', type: 'string | number', default: '-' },
  { property: 'defaultValue', description: 'Default selected value (uncontrolled)', type: 'string | number', default: '-' },
  { property: 'onChange', description: 'Callback when selection changes', type: '(value: string | number) => void', default: '-' },
  { property: 'size', description: 'Size of the control', type: "'xs' | 'sm' | 'md' | 'lg'", default: "'md'" },
  { property: 'block', description: 'Take full width of container', type: 'boolean', default: 'false' },
  { property: 'disabled', description: 'Disable all options', type: 'boolean', default: 'false' },
  { property: 'className', description: 'Additional CSS class', type: 'string', default: '-' },
];

const optionApi = [
  { property: 'label', description: 'Display label', type: 'ReactNode', default: '-' },
  { property: 'value', description: 'Option value', type: 'string | number', default: '-' },
  { property: 'disabled', description: 'Disable this option', type: 'boolean', default: 'false' },
  { property: 'icon', description: 'Icon before label', type: 'ReactNode', default: '-' },
];

const examples = [
  {
    id: 'basic',
    title: 'Basic Usage',
    description: 'Simple string options for view switching.',
    code: `import React, { useState } from 'react'
import { Segmented } from 'asterui'

const App: React.FC = () => {
  const [view, setView] = useState('List')

  return (
    <Segmented
      options={['List', 'Grid', 'Table']}
      value={view}
      onChange={setView}
    />
  )
}

export default App`,
  },
  {
    id: 'objects',
    title: 'Object Options',
    description: 'Options with labels, values, and disabled states.',
    code: `import React, { useState } from 'react'
import { Segmented } from 'asterui'

const App: React.FC = () => {
  const [period, setPeriod] = useState('week')

  return (
    <Segmented
      options={[
        { label: 'Daily', value: 'day' },
        { label: 'Weekly', value: 'week' },
        { label: 'Monthly', value: 'month' },
        { label: 'Yearly', value: 'year', disabled: true },
      ]}
      value={period}
      onChange={setPeriod}
    />
  )
}

export default App`,
  },
  {
    id: 'sizes',
    title: 'Sizes',
    description: 'Four size options available.',
    code: `import React from 'react'
import { Segmented, Space } from 'asterui'

const App: React.FC = () => (
  <Space direction="vertical" gap="md">
    <Segmented options={['S', 'M', 'L']} size="xs" defaultValue="M" />
    <Segmented options={['S', 'M', 'L']} size="sm" defaultValue="M" />
    <Segmented options={['S', 'M', 'L']} size="md" defaultValue="M" />
    <Segmented options={['S', 'M', 'L']} size="lg" defaultValue="M" />
  </Space>
)

export default App`,
  },
  {
    id: 'block',
    title: 'Block Mode',
    description: 'Full width with equally sized options.',
    code: `import React, { useState } from 'react'
import { Segmented } from 'asterui'

const App: React.FC = () => {
  const [align, setAlign] = useState('Center')

  return (
    <div className="w-full max-w-md">
      <Segmented
        options={['Left', 'Center', 'Right']}
        value={align}
        onChange={setAlign}
        block
      />
    </div>
  )
}

export default App`,
  },
  {
    id: 'disabled',
    title: 'Disabled',
    description: 'Disabled state for the entire control.',
    code: `import React from 'react'
import { Segmented } from 'asterui'

const App: React.FC = () => (
  <Segmented
    options={['Option A', 'Option B', 'Option C']}
    defaultValue="Option A"
    disabled
  />
)

export default App`,
  },
  {
    id: 'icons',
    title: 'With Icons',
    description: 'Options with icons and labels.',
    code: `import React, { useState } from 'react'
import { Segmented } from 'asterui'

const ListIcon = () => (
  <svg className="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M4 6h16M4 12h16M4 18h16" />
  </svg>
)

const GridIcon = () => (
  <svg className="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
  </svg>
)

const App: React.FC = () => {
  const [view, setView] = useState('list')

  return (
    <Segmented
      options={[
        { label: 'List', value: 'list', icon: <ListIcon /> },
        { label: 'Grid', value: 'grid', icon: <GridIcon /> },
      ]}
      value={view}
      onChange={setView}
    />
  )
}

export default App`,
  },
];
---

<Layout title="Segmented - AsterUI">
  <div class="max-w-screen-xl mx-auto">
    <div class="mb-8">
      <nav class="text-sm breadcrumbs mb-4">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/components">Components</a></li>
          <li>Segmented</li>
        </ul>
      </nav>
      <h1 class="text-4xl font-bold mb-2">Segmented</h1>
      <p class="text-base-content/70 text-lg">Inline toggle for switching between mutually exclusive options.</p>
    </div>

    <section class="mb-8">
      <h2 class="text-2xl font-bold mb-4">Import</h2>
      <div class="border border-base-300 rounded-lg overflow-hidden [&_pre]:!m-0 [&_pre]:!rounded-none">
        <Code code="import { Segmented } from 'asterui'" lang="tsx" themes={{ light: 'github-light', dark: 'github-dark' }} defaultColor={false} />
      </div>
    </section>

    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6">Examples</h2>
      <div class="columns-1 lg:columns-2 gap-6">
      {examples.map((example) => (
        <div class="example-card mb-6 border border-base-300 rounded-lg overflow-hidden break-inside-avoid">
          <div class="p-4 bg-base-100">
            <h3 class="text-lg font-semibold mb-1">{example.title}</h3>
            <p class="text-sm text-base-content/70 mb-4">{example.description}</p>
            <div class="demo-container" data-example={example.id}></div>
          </div>
          <div class="border-t border-base-300 flex justify-center bg-base-200">
            <div class="tooltip tooltip-top" data-tip="Show code">
              <button class="toggle-code btn btn-ghost btn-sm font-mono">&lt;&#8201;&gt;</button>
            </div>
          </div>
          <div class="code-panel relative" aria-hidden="true">
            <button class="copy-btn absolute top-2 right-2 btn btn-xs btn-ghost z-10" data-code={example.code}>
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" /></svg>
            </button>
            <div class="[&_pre]:!p-4 [&_pre]:!rounded-none [&_pre]:!m-0 text-sm">
              <Code code={example.code} lang="tsx" themes={{ light: 'github-light', dark: 'github-dark' }} defaultColor={false} />
            </div>
          </div>
        </div>
      ))}
      </div>
    </section>

    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6">API</h2>
      <ApiTable title="Segmented" data={segmentedApi} />
      <div class="mt-6">
        <ApiTable title="SegmentedOption" data={optionApi} />
      </div>
    </section>

    <section class="mb-8">
      <h2 class="text-2xl font-bold mb-4">When to Use</h2>
      <ul class="list-disc list-inside space-y-2 text-base-content/80">
        <li><strong>View toggles</strong>: Switch between List/Grid/Table views</li>
        <li><strong>Time periods</strong>: Day/Week/Month/Year filters</li>
        <li><strong>Size selectors</strong>: S/M/L/XL options</li>
        <li><strong>Alignment</strong>: Left/Center/Right controls</li>
        <li><strong>Mode switches</strong>: Light/Dark theme toggles</li>
      </ul>
    </section>

    <section class="mb-8">
      <h2 class="text-2xl font-bold mb-4">Segmented vs Radio.Group</h2>
      <div class="overflow-x-auto">
        <table class="table">
          <thead>
            <tr>
              <th>Segmented</th>
              <th>Radio.Group</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Immediate UI state changes</td>
              <td>Form field values</td>
            </tr>
            <tr>
              <td>Compact, button-like appearance</td>
              <td>Traditional radio buttons</td>
            </tr>
            <tr>
              <td>Always visible options</td>
              <td>Can have many options</td>
            </tr>
            <tr>
              <td>2-5 options typically</td>
              <td>Any number of options</td>
            </tr>
          </tbody>
        </table>
      </div>
    </section>
  </div>
</Layout>

<style>
  .code-panel { max-height: 0; overflow: hidden; transition: max-height 0.3s ease-out; }
  .example-card.open .code-panel { max-height: 2000px; }
</style>

<script>
  import '../../scripts/toggleDemos.tsx';
  document.querySelectorAll('.toggle-code').forEach(btn => {
    btn.addEventListener('click', () => {
      const card = btn.closest('.example-card');
      if (card) {
        card.classList.toggle('open');
        const panel = card.querySelector('.code-panel');
        const tooltip = btn.closest('.tooltip');
        if (card.classList.contains('open')) {
          panel?.setAttribute('aria-hidden', 'false');
          tooltip?.setAttribute('data-tip', 'Hide code');
        } else {
          panel?.setAttribute('aria-hidden', 'true');
          tooltip?.setAttribute('data-tip', 'Show code');
        }
      }
    });
  });
  document.querySelectorAll('.copy-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      const code = btn.getAttribute('data-code');
      if (code) {
        await navigator.clipboard.writeText(code);
        btn.classList.add('btn-success');
        setTimeout(() => btn.classList.remove('btn-success'), 1000);
      }
    });
  });
</script>
