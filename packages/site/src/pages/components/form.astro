---
import Layout from '../../layouts/Layout.astro';
import ApiTable from '../../components/ApiTable.astro';
import { Code } from 'astro:components';

const formApi = [
  { property: 'onFinish', description: 'Success handler (called when validation passes)', type: '(values: any) => void' },
  { property: 'onFinishFailed', description: 'Failed handler (called when validation fails)', type: '(errorInfo: any) => void' },
  { property: 'initialValues', description: 'Initial form field values', type: 'Record<string, any>' },
  { property: 'layout', description: 'Form layout orientation', type: "'horizontal' | 'vertical' | 'inline'", default: "'vertical'" },
  { property: 'disabled', description: 'Disable all form fields', type: 'boolean', default: 'false' },
  { property: 'children', description: 'Form content (Form.Item elements)', type: 'React.ReactNode' },
  { property: 'className', description: 'Additional CSS classes', type: 'string' },
];

const formItemApi = [
  { property: 'name', description: 'Field name (required for validation)', type: 'string' },
  { property: 'label', description: 'Field label text', type: 'string' },
  { property: 'rules', description: 'Validation rules', type: 'ValidationRule[]' },
  { property: 'required', description: 'Mark field as required (shorthand)', type: 'boolean', default: 'false' },
  { property: 'children', description: 'Form control element (Input, Select, etc.)', type: 'React.ReactNode' },
  { property: 'className', description: 'Additional CSS classes', type: 'string' },
];

const examples = [
  {
    id: 'basic',
    title: 'Basic Form',
    description: 'Simple login form with username and password fields.',
    code: `import React from 'react'
import { Form, Input, Button } from '@edadma/bloomui'

const App: React.FC = () => {
  const handleFinish = (values: any) => {
    console.log('Form values:', values)
  }

  return (
    <Form onFinish={handleFinish}>
      <Form.Item name="username" label="Username">
        <Input placeholder="Enter username" />
      </Form.Item>
      <Form.Item name="password" label="Password">
        <Input type="password" placeholder="Enter password" />
      </Form.Item>
      <Form.Item>
        <Button type="primary" htmlType="submit">
          Login
        </Button>
      </Form.Item>
    </Form>
  )
}

export default App`,
  },
  {
    id: 'validation',
    title: 'Form Validation',
    description: 'Form with validation rules for required fields and email pattern.',
    code: `import React from 'react'
import { Form, Input, Button } from '@edadma/bloomui'

const App: React.FC = () => {
  const handleFinish = (values: any) => {
    console.log('Success:', values)
  }

  const handleFinishFailed = (errorInfo: any) => {
    console.log('Failed:', errorInfo)
  }

  return (
    <Form onFinish={handleFinish} onFinishFailed={handleFinishFailed}>
      <Form.Item
        name="email"
        label="Email"
        rules={[
          { required: true, message: 'Please enter your email' },
          { type: 'email', message: 'Please enter a valid email' }
        ]}
      >
        <Input placeholder="name@example.com" />
      </Form.Item>
      <Form.Item
        name="password"
        label="Password"
        rules={[
          { required: true, message: 'Please enter your password' },
          { min: 6, message: 'Password must be at least 6 characters' }
        ]}
      >
        <Input type="password" placeholder="Enter password" />
      </Form.Item>
      <Form.Item>
        <Button type="primary" htmlType="submit">
          Submit
        </Button>
      </Form.Item>
    </Form>
  )
}

export default App`,
  },
  {
    id: 'layouts',
    title: 'Form Layouts',
    description: 'Different form layouts: horizontal, vertical, and inline.',
    code: `import React, { useState } from 'react'
import { Form, Input, Button, Radio, Space } from '@edadma/bloomui'

const App: React.FC = () => {
  const [layout, setLayout] = useState<'horizontal' | 'vertical' | 'inline'>('vertical')

  return (
    <Space direction="vertical" size="lg" className="w-full">
      <Radio.Group
        value={layout}
        onChange={(e) => setLayout(e.target.value as typeof layout)}
      >
        <Radio value="vertical">Vertical</Radio>
        <Radio value="horizontal">Horizontal</Radio>
        <Radio value="inline">Inline</Radio>
      </Radio.Group>

      <Form layout={layout} onFinish={(values) => console.log(values)}>
        <Form.Item name="name" label="Name" required>
          <Input placeholder="Enter name" />
        </Form.Item>
        <Form.Item name="email" label="Email" required>
          <Input placeholder="Enter email" />
        </Form.Item>
        <Form.Item>
          <Button type="primary" htmlType="submit">
            Submit
          </Button>
        </Form.Item>
      </Form>
    </Space>
  )
}

export default App`,
  },
  {
    id: 'initial-values',
    title: 'Initial Values',
    description: 'Form with pre-populated initial values.',
    code: `import React from 'react'
import { Form, Input, Button } from '@edadma/bloomui'

const App: React.FC = () => {
  const initialValues = {
    username: 'john_doe',
    email: 'john@example.com',
    bio: 'Software developer'
  }

  const handleFinish = (values: any) => {
    console.log('Updated values:', values)
  }

  return (
    <Form initialValues={initialValues} onFinish={handleFinish}>
      <Form.Item name="username" label="Username">
        <Input />
      </Form.Item>
      <Form.Item name="email" label="Email">
        <Input />
      </Form.Item>
      <Form.Item name="bio" label="Bio">
        <Input.TextArea rows={3} />
      </Form.Item>
      <Form.Item>
        <Button type="primary" htmlType="submit">
          Update Profile
        </Button>
      </Form.Item>
    </Form>
  )
}

export default App`,
  },
];
---

<Layout title="Form - BloomUI">
  <div class="max-w-screen-xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <nav class="text-sm breadcrumbs mb-4">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/components">Components</a></li>
          <li>Form</li>
        </ul>
      </nav>
      <h1 class="text-4xl font-bold mb-2">Form</h1>
      <p class="text-base-content/70 text-lg">
        Form wrapper with validation, layout options, and field management.
      </p>
    </div>

    <!-- Import -->
    <section class="mb-8">
      <h2 class="text-2xl font-bold mb-4">Import</h2>
      <div class="border border-base-300 rounded-lg overflow-hidden [&_pre]:!m-0 [&_pre]:!rounded-none">
        <Code code="import { Form } from '@edadma/bloomui'" lang="tsx" themes={{ light: 'github-light', dark: 'github-dark' }} defaultColor={false} />
      </div>
    </section>

    <!-- Examples -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6">Examples</h2>

      <div class="columns-1 lg:columns-2 gap-6">
      {examples.map((example, i) => (
        <div class="example-card mb-6 border border-base-300 rounded-lg overflow-hidden break-inside-avoid">
          <div class="p-4 bg-base-100">
            <h3 class="text-lg font-semibold mb-1">{example.title}</h3>
            <p class="text-sm text-base-content/70 mb-4">{example.description}</p>
            <div class="demo-container" data-example={example.id}></div>
          </div>
          <div class="border-t border-base-300 flex justify-center bg-base-200">
            <div class="tooltip tooltip-top" data-tip="Show code">
              <button class="toggle-code btn btn-ghost btn-sm font-mono">
                &lt;&#8201;&gt;
              </button>
            </div>
          </div>
          <div class="code-panel relative" aria-hidden="true">
              <button class="copy-btn absolute top-2 right-2 btn btn-xs btn-ghost z-10" data-code={example.code}>
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                </svg>
              </button>
              <div class="[&_pre]:!p-4 [&_pre]:!rounded-none [&_pre]:!m-0 text-sm">
                <Code code={example.code} lang="tsx" themes={{ light: 'github-light', dark: 'github-dark' }} defaultColor={false} />
              </div>
          </div>
        </div>
      ))}
      </div>
    </section>

    <!-- API -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6">API</h2>
      <ApiTable title="Form" data={formApi} />
      <div class="mt-8">
        <ApiTable title="Form.Item" data={formItemApi} />
      </div>
    </section>

    <!-- Validation Rules -->
    <section class="mb-8">
      <h2 class="text-2xl font-bold mb-4">Validation Rules</h2>
      <p class="text-base-content/80 mb-4">
        The <code class="bg-base-200 px-1 rounded">rules</code> prop accepts an array of validation rules:
      </p>
      <ul class="list-disc list-inside space-y-2 text-base-content/80">
        <li><code class="bg-base-200 px-1 rounded">required: boolean</code> - Field is required</li>
        <li><code class="bg-base-200 px-1 rounded">message: string</code> - Error message to display</li>
        <li><code class="bg-base-200 px-1 rounded">type: 'email' | 'url' | 'number'</code> - Built-in type validation</li>
        <li><code class="bg-base-200 px-1 rounded">min: number</code> - Minimum length for strings or minimum value for numbers</li>
        <li><code class="bg-base-200 px-1 rounded">max: number</code> - Maximum length for strings or maximum value for numbers</li>
        <li><code class="bg-base-200 px-1 rounded">pattern: RegExp</code> - Custom regex pattern validation</li>
      </ul>
    </section>
  </div>
</Layout>

<style>
  .code-panel {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-out;
  }
  .example-card.open .code-panel {
    max-height: 2000px;
  }
</style>

<script>
  import '../../scripts/formDemos';

  // Toggle code visibility
  document.querySelectorAll('.toggle-code').forEach(btn => {
    btn.addEventListener('click', () => {
      const card = btn.closest('.example-card');
      if (card) {
        card.classList.toggle('open');
        const panel = card.querySelector('.code-panel');
        const tooltip = btn.closest('.tooltip');
        if (card.classList.contains('open')) {
          panel?.setAttribute('aria-hidden', 'false');
          tooltip?.setAttribute('data-tip', 'Hide code');
        } else {
          panel?.setAttribute('aria-hidden', 'true');
          tooltip?.setAttribute('data-tip', 'Show code');
        }
      }
    });
  });
</script>
